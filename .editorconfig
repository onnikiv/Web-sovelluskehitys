# sample .editorconfig

# Top-most EditorConfig file
root = true

# File encoding
[*]
charset = utf-8

# Indentation settings
[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

# Line endings
[*]
end_of_line = lf

# Trailing whitespace
[*]
trim_trailing_whitespace = true

# Override for Markdown files
[*.md]
trim_trailing_whitespace = false

# New line at the end of the file
[*]
insert_final_newline = true

# Maximum line length
[*.{js,css,html}]
max_line_length = 80
